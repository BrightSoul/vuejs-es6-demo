{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": false
    },
    {
      "label": "serve",
      "type": "npm",
      "script": "serve",
      "isBackground": true,
      "problemMatcher": {
        "background": {
          "beginsPattern": "listen",
          "endsPattern": "listen"
        },
        "pattern": {
          "regexp": "] (.+) after",
          "message": 1
        }
      }
    }
  ]
}